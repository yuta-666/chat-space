.main-chat 
  .main-header
    .main-header__left-box
      .main-header__left-box__group-name
        name
      %ul.main-header__left-box__member-list
        Menber : 
        %li.main-header__left-box__member-list--member
          list
    .main-header__edit-btn
      = link_to "Edit", "#"
  .messages
    .meesage
      .message__info
        %p.message__info__talker
          name
        %p.message__info__data
          data
      %p.message__text
        acdc
  .form
    %form.new-message
      .input-box
        %input{type:"text",class: "input-box__text", placeholder: "type a message"} 
        %label{class: "input-box__image"}
          = icon('fa', 'image')
          %input{type: "file", class:         "input-box__image__file"}
      %input{type: "submit", class: "send-btn", value: "Send"}